<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.pokemon.controllers.Batalla">

    <ImageView fx:id="backgroundImage" preserveRatio="false" fitHeight="969.0" fitWidth="1295.0" />

    <ImageView fx:id="playerData" fitWidth="200" fitHeight="200" layoutX="50" layoutY="250"/>
    <ImageView fx:id="cpuSprite" fitWidth="200" fitHeight="200" layoutX="500" layoutY="250"/>

    <Button fx:id="firstMovement" layoutX="50" layoutY="200" text="Ascuas"/>
    <Button fx:id="seccondMovement" layoutX="100" layoutY="200" text="Lanzallamas"/>
    <Button fx:id="thirdMovement" layoutX="150" layoutY="200" text="Giro Fuego"/>
    <Button fx:id="fourthMovement" layoutX="200" layoutY="500" text="Infierno"/>

    <Button fx:id="evolveButton" layoutX="200" layoutY="500" text="Evolucionar"/>

    <Text fx:id="battleLog" layoutX="50" layoutY="50" wrappingWidth="600"/>

</AnchorPane>