<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="container" alignment="CENTER" prefHeight="969" prefWidth="1295" spacing="50" style="-: url(&quot;com/pokemon/media/pictures/selectPokemonMenu/selectMenuBg.jpg&quot;);" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pokemon.controllers.selectPokemonMenu">

   <!-- Texto superior -->
   <Label alignment="CENTER" text="Seleccione su Pokémon" textFill="#f8f8f8">
      <font>
         <Font name="System Bold" size="60" />
      </font>
   </Label>

   <!-- Nombres + imágenes -->
   <HBox alignment="CENTER" onKeyPressed="#keySelectPokemon" spacing="80">

      <!-- Charmander -->
      <VBox fx:id="contenedorCharmander" alignment="CENTER" focusTraversable="true" onMouseClicked="#selectPokemon" onMouseEntered="#onSeleccionarCharmander" onMouseExited="#stopAnimation" spacing="10" style="-fx-cursor: hand;">
         <ImageView fx:id="charmanderImage" fitHeight="96" fitWidth="96" preserveRatio="true" />
         <Label style="-fx-font-size: 32px;" text="Charmander" textFill="#f8f8f8" />
      </VBox>

      <!-- Squirtle -->
      <VBox fx:id="contenedorSquirtle" alignment="CENTER" focusTraversable="true" onMouseClicked="#selectPokemon" onMouseEntered="#onSeleccionarSquirtle" onMouseExited="#stopAnimation" spacing="10" style="-fx-cursor: hand;">
         <ImageView fx:id="squirtleImage" fitHeight="96" fitWidth="96" preserveRatio="true" />
         <Label style="-fx-font-size: 32px;" text="Squirtle" textFill="#f8f8f8" />
      </VBox>

      <!-- Bulbasaur -->
      <VBox fx:id="contenedorBulbasaur" alignment="CENTER" focusTraversable="true" onMouseClicked="#selectPokemon" onMouseEntered="#onSeleccionarBulbasaur" onMouseExited="#stopAnimation" spacing="10" style="-fx-cursor: hand;">
         <ImageView fx:id="bulbasaurImage" fitHeight="96" fitWidth="96" preserveRatio="true" />
         <Label style="-fx-font-size: 32px;" text="Bulbasaur" textFill="#f8f8f8" />
      </VBox>

      <!-- Arcaine -->
      <VBox fx:id="contenedorArcaine" alignment="CENTER" focusTraversable="true" onMouseClicked="#selectPokemon" onMouseEntered="#onSeleccionarArcaine" onMouseExited="#stopAnimation" spacing="10" style="-fx-cursor: hand;">
         <ImageView fx:id="arcaineImage" fitHeight="96" fitWidth="96" preserveRatio="true" />
         <Label style="-fx-font-size: 32px;" text="Arcaine" textFill="#f8f8f8" />
      </VBox>

      <!-- Poliwag -->
      <VBox fx:id="contenedorPoliwag" alignment="CENTER" focusTraversable="true" onMouseClicked="#selectPokemon" onMouseEntered="#onSeleccionarPoliwag" onMouseExited="#stopAnimation" spacing="10" style="-fx-cursor: hand;">
         <ImageView fx:id="poliwagImage" fitHeight="96" fitWidth="96" preserveRatio="true" />
         <Label style="-fx-font-size: 32px;" text="Poliwag" textFill="#f8f8f8" />
      </VBox>

      <!-- Oddish -->
      <VBox fx:id="contenedorOddish" alignment="CENTER" focusTraversable="true" onMouseClicked="#selectPokemon" onMouseEntered="#onSeleccionarOddish" onMouseExited="#stopAnimation" spacing="10" style="-fx-cursor: hand;">
         <ImageView fx:id="oddishImage" fitHeight="96" fitWidth="96" preserveRatio="true" />
         <Label style="-fx-font-size: 32px;" text="Oddish" textFill="#f8f8f8" />
      </VBox>

   </HBox>

</VBox>
